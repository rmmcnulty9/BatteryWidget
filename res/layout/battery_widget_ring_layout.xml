<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" >
    
    <ImageView
        android:id="@+id/battery"
        android:layout_width="@dimen/ring_width"
        android:layout_height="@dimen/ring_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/battery_ring" />

    <ImageView
        android:id="@+id/ring_value"
        android:layout_width="@dimen/ring_value_width"
        android:layout_height="@dimen/ring_value_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/ring_border_width"
        android:src="@drawable/battery_ringvalue" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="100%"
        android:textColor="#eeeeee"
        android:textSize="@dimen/ring_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/charging_indicator"
        android:layout_width="@dimen/indicator_width"
        android:layout_height="@dimen/indicator_height"
        android:layout_alignBottom="@+id/ring_value"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:src="@drawable/charging" />

</RelativeLayout>